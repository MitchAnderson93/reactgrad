{
  "title": "ReactGrad Starter",
  "description": "Build pixel-perfect react apps from JSON",
  "theme": "bootstrap",
  "pages": [
    {
      "path": "/",
      "components": [
        {
          "type": "Header",
          "props": {
            "text": "Welcome to ReactGrad"
          }
        },
        {
          "type": "Text",
          "props": {
            "content": "Simple text"
          }
        },
        {
          "type": "Button",
          "props": {
            "variant": "primary",
            "label": "Launch modal"
          },
          "action": {
            "type": "Modal",
            "title": "List from API",
            "fetch": {
              "url": "https://api.restful-api.dev/objects"
            },
            "response": {
              "target": "loadingBox.data"
            },
            "components": [
              {
                "id": "loadingBox",
                "type": "Text",
                "props": {
                  "content": "Loading..."
                }
              }
            ]
          }
        },
        {
          "type": "Link",
          "props": {
            "to": "/about",
            "label": "Go to About Page"
          }
        }
      ]
    },
    {
      "path": "/about",
      "components": [
        {
          "type": "Header",
          "props": {
            "text": "About This Project"
          }
        },
        {
          "type": "Button",
          "props": {
            "to": "/",
            "label": "Back to Home"
          }
        }
      ]
    }
  ]
}